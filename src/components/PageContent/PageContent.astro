---
import type { MarkdownHeading } from "astro";
import MoreMenu from "../RightSidebar/MoreMenu.astro";
import TableOfContents from "../RightSidebar/TableOfContents";
import { removeBaseUrl } from "../../utils/base-url";
import getCommits from "../../utils/get-commits";

type Props = {
  title: string;
  filePath: string;
  headings: MarkdownHeading[];
  githubEditUrl: string;
};

const { title, headings, githubEditUrl, filePath } = Astro.props;

const resolvedPath = removeBaseUrl(filePath);
const url = `https://api.github.com/repos/willwill96/the-ui-dawg-static-site/commits?path=${resolvedPath}`;

const commits = await getCommits(url)
const lastModified = commits[0] ? new Date(commits[0].commit.author.date).toLocaleDateString() : 'N/A'
---

<article id="article" class="content">
  <section class="main-section">
    <h1 class="content-title" id="overview">{title}</h1>
    {lastModified && <span class="content-modified">Last modified: {lastModified}</span>}
    <nav class="block sm:hidden">
      <TableOfContents client:media="(max-width: 50em)" headings={headings} />
    </nav>
    <slot />
  </section>
  <nav class="block sm:hidden">
    <MoreMenu editHref={githubEditUrl} />
  </nav>
</article>

<style>
  .content {
    padding: 0;
    max-width: 75ch;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .content-modified {
    font-weight: 600;
  }

  .content > section {
    margin-bottom: 4rem;
  }

  .block {
    display: block;
  }

  @media (min-width: 50em) {
    .sm\:hidden {
      display: none;
    }
  }
</style>
